#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout, NULL);

	int valorIngresado;
	int acumulador;
	int promedio;
	int i;

	for (i = 0; i < 5; i++) {

		printf("Ingrese un numero entero y positivo \n");
		scanf("%d", &valorIngresado);

		acumulador += valorIngresado;
	}

	promedio = (float) acumulador / i;

	printf("El promedio de los valores ingresado es: %.2f", promedio);
}
/*
 Ejercicio 2-1: Ingresar 5 números enteros calcular y mostrar el promedio de los números.
 Probar la aplicación con distintos valores.
 Ejemplo 1:  3 - 5 - 7 - 9 - 1
 Ejemplo 2:  2 - 1 - 8 - 1 - 2

 */

#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout, NULL);

	int ingreseNumero;
	int promedio;
	int acumuladorNumero = 0;
	int i;

	for (i = 0; i < 5; i++) {
		printf("Ingrese numero: \n");
		scanf("%d", &ingreseNumero);
		acumuladorNumero += ingreseNumero;
	}

	promedio = (float) acumuladorNumero / i;
	printf("promedio: %.2d", promedio);

	return (0);
}

/*
 Ejercicio 2-1: Ingresar 5 números enteros calcular y mostrar el promedio de los números.
 Probar la aplicación con distintos valores.
 Ejemplo 1:  3 - 5 - 7 - 9 - 1
 Ejemplo 2:  2 - 1 - 8 - 1 - 2

 */

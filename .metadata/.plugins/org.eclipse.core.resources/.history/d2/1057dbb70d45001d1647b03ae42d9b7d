int swapearChar(char arrayNombre[], char char1, char char2){

	int retorno = -1;

	if(arrayNombre != NULL && char1 > 1 && char2 > 1){

		for(int i = 0; i < 10; i++){

			if(arrayNombre[i] == char1){

				//strcpy(arrayNombre[i], char2);
				arrayNombre[i] = char2;
			}

		}

		retorno = 0;
	}


	return retorno;

}














/*
 Ejercicio 5-1:
 Pedir el ingreso de 5 n√∫meros. Mostrarlos y calcular la sumatoria de los mismos.
 */

#include <stdio.h>
#include <stdlib.h>
#include "validaciones.h"


int main(void) {
	setbuf(stdout, NULL);

	int arrayNumeros[5];
	int i;
	int acumulador = 0;

	for (i = 0; i < 5; i++) {

		if (getNumber(&arrayNumeros[i], "Ingrese un numerpo entre 0-100\n",
				"No ingresaste un numero o no se encuentra dentro del rango\n",
				-100, 100)) {

			acumulador += arrayNumeros[i];
		}
	}

	printf("La suma de los 5 numeros ingresado es: %d", acumulador);

	return 0;
}

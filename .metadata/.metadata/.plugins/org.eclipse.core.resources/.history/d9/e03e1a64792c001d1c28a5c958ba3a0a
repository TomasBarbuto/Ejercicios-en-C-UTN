/*
Ejercicio 3-4:
Especializar la funci√≥n anterior para que permita validar el entero ingresado en un rango
determinado.

*/

#include <stdio.h>
#include <stdlib.h>
#include <stddef.h>
#include "Validaciones.h"

int main(void) {
	setbuf(stdout, NULL);

	int numeroEntero;
	int respuesta;

	printf("Ingrese un numero Entero: \n");
	scanf("%d", &numeroEntero);

	respuesta = validarRango(numeroEntero);

	if(respuesta == -1){
		printf("El numero no esta dentro del rango");
	}else{
		printf("El resultado es: %d", respuesta);
	}

	return 0;
}

#include <stdio.h>
int validarFlotante(int numero, float* pResultado){

	int retorno = -1;

	if(pResultado != NULL){
		*pResultado = numero;
		retorno = 0;
	}
	return retorno;
}

int validarNumeroPar (int numero, int* pResultado){

	int retorno = -1;

	if(pResultado != NULL){
		if(numero % 2 == 0){
			*pResultado = numero;
			retorno = 0;

		}else{

			retorno = -1;
		}
	}
	return retorno;
}

int validarEntero(int numero, int* pResultado){

	int retorno = -1;

		if(pResultado != NULL){
			*pResultado = numero;
			retorno = 0;
		}
		return retorno;
}

int validarRango (int numero){

	int retorno;

	if(numero > 0 && numero <10){

		retorno = numero;
	}else{

		retorno = -1;
	}

	return retorno;
}








